<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--Disable the next lines to re-activate all logs-->
    <logger name="net.dv8tion.jda.api.JDA" level="OFF"/>
    <logger name="net.dv8tion.jda.internal.requests.WebSocketClient" level="OFF"/>
    <logger name="com.zaxxer.hikari.HikariDataSource" level="OFF"/>
    <logger name="com.sedmelluq.lava.common.natives.NativeLibraryLoader" level="OFF"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{dd.MM.YYYY HH:mm:ss}] <!--%boldCyan(%-34.-34thread) %red(%10.10X{jda.shard}) -->%highlight(%-6level) %class %boldGreen(%-15.-15logger{0})  %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>